<table class="orders">
  <% if !@orders.empty? %>
    <thead>
      <tr>
        <th>Order Number</th>
        <th>Order Date</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.reverse.each do |order|%>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.format_date(order.created_at) %></td>
          <td><%= button_to "View Order", order_path(order), method: "get" %></td>
        </tr>
       <%end%>
    </tbody>
  <% else %>
    <h1>You currently have no orders. Get out and buy some stuff!<h1>
  <% end %>
</table>
